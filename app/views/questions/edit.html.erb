<h1 class="title">Random Mandatory Socialization Question Generator</h1>

<div class="create-question">
  <h2>Edit Question <%= @question.id %></h2>
<% if @question.errors.any? %>
  <h2>The following errors prevented the article from being saved</h2>
  <ul>
    <% @question.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
</div>
  <%= form_with(model: @question, local: true, method: "patch") do |f| %>
  <div class="create-form">
    <%= f.text_area :question_string, { class: "question-field input-group form-control" } %>
  </div>
  <div class="create-form">
    <%= f.submit %>
    &nbsp;&nbsp;
    <%= link_to 'Cancel', question_path %>
  </div>
<% end %>
