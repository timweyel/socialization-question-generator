<h1 class="title">Random Mandatory Socialization Question Generator</h1>

<h2><%= button_to "Get Random Question", random_question_url, :method => :get %></h2>


<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Question</th>
    </tr>
  </thead>
    <tbody>
      <% @questions.each do |q| %>
        <tr>
          <td><%= q.id %></td>
          <td><%= q.question_string %></td>
        </tr>
      <% end %>
    </tbody>
</table>
