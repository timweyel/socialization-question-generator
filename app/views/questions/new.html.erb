<h1 class="title">Random Mandatory Socialization Question Generator</h1>

<div class="create-question">
  <h2>Create a new question</h2>
  <% if @question.errors.any? %>
    <h2>The following errors prevented the question from being saved:</h2>
    <ul>
      <% @question.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
</div>
  <%= form_with scope: :question_string, url: questions_url, local: true do |f| %>
    <div class="create-form">
        <%= f.text_area :question_string, { class: "question-field input-group form-control", :placeholder => "Enter your question" } %>&nbsp;
    </div>
    <div class="create-form">
        <%= f.submit :value => "Save"%>&nbsp;&nbsp;
        <%= link_to 'Cancel', questions_path %>
    </div>
  <% end %>
