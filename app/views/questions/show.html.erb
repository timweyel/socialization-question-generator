<h1 class="title">Random Mandatory Socialization Question Generator</h1>

<div class="btn-group">
  <div>
    <h4 class="button"><%= button_to "Fresh Question", random_question_url, :method => :get %></h4>
  </div>
  <div>
    <h4 class="button" ><%= button_to "All Questions", questions_path, :method => :get %></h4>
  </div>
</div>

<div class="question">
  <div class="btn-group">
    <div>
      <p>Question <%= @question.id %>:  <%= @question.question_string %>&nbsp;&nbsp;</p>
    </div>
    <div >
      <p><%= link_to "Edit", edit_question_path(@question), :method => :get %>&nbsp;&nbsp;</p>
    </div>
    <div>
      <p><%= link_to "Delete", question_path(@question), :method => :delete, data: { confirm: 'Are you sure you want to delete this question?' } %></p>
    </div>
  </div>
</div>
